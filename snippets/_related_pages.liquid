{% assign pages = page.children_in_list | order_by: '-created_at' | limit: 6 %}
<a name="pages"></a>

<section class="">
    <div class="max-w-6xl mx-auto px-4">
        <div class="py-4 md:py-6">
            <!-- Section header -->
            <div class="pb-4 -ml-2">
                <h2 class="text-pretty text-lg font-semibold tracking-tight text-gray-900 sm:text-xl flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 w-8 h-8 text-primary mr-1">
                        <path fill-rule="evenodd" d="M4.5 7.5a3 3 0 0 1 3-3h9a3 3 0 0 1 3 3v9a3 3 0 0 1-3 3h-9a3 3 0 0 1-3-3v-9Z" clip-rule="evenodd" />
                    </svg>
                    {{ page.settings.title }}</h2>
                <p class="mt-1 pl-2 text-sm text-gray-500">{{ page.settings.description }}</p>
            </div>

            <!-- Posts -->
            <ul class="list-disc list-inside">
                {% for item in pages %}
                    <li class="md:text-base mb-2">
                        <a class="hover:text-primary" href="{{ item.path }}">{{ item.link_text }}</a>
                    </li>
                {% endfor %}
            </ul>

        </div>
    </div>
</section>
