{%  assign page_count = pages | size %}
{% if page_count > 1 %}
    {% paginate_tag pages, per: 24 %}
        {% for item in pages  %}
            {%  assign sub_items_count= item.children_in_list | size %}
            {% if sub_items_count > 0 %}
                <div class="">
                    {% assign sub_items = item.children_in_list | limit: 24  %}
                    {% for item2 in sub_items %}
                        {% render 'content_faq', item: item2 %}
                    {% endfor %}
                    {% if sub_items_count > 24 %}
                        <div class="text-center mt-4">
                            <a href="{{ item.url }}" class="btn btn-primary">Learn more</a>
                        </div>
                    {% endif %}
                </div>
            {% else %}
                {% render 'content_faq', item: item %}
            {% endif %}
        {% endfor %}
        <!-- Pagination -->
        <div class="w-full text-right block mt-12">
            {% render 'paginate', paginate: paginate %}
        </div>
    {% endpaginate_tag %}
{% else %}
    
    <h2 class="text-gray-600 cursor-pointer">
        {{ page.settings.title }}
    </h2> 
    <div class=" ProseMirror">
        {{ page.settings.content }}
    </div>
{% endif %}