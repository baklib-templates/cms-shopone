<section class="bg-white py-6 sm:py-12">
    <div class="mx-auto max-w-6xl px-4">
        <div class="mx-auto max-w-2xl md:flex flex-col items-center justify-center">
            <h2 class="font-semibold tracking-tight text-gray-900 md:text-3xl text-2xl flex items-center">
                Contact US</h2>
            <p class="mt-2 ml-2 text-sm text-gray-500"></p>
        </div>

        <!-- Cards Container -->
        <section class="my-4">
            <div role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-4">
                <a href="mailto:{{ site.settings.email | default: '#' }}" class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-gray-100 hover:bg-secondary/10 hover:text-white hover:no-underline text-center border">
                    <div class="flex flex-1 flex-col p-8">
                        <div class="flex-shrink-0 group block">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-primary mx-auto size-10 w-10 h-10 shrink-0">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                            </svg>
                        </div>
                        <h3 class="mt-6 text-lg font-medium text-gray-900">Email</h3>
                        <p class="text-gray-500 text-sm">{{ site.settings.email | default: '#' }}</p>
                    </div>
                </a>
                <a href="tel:{{ site.settings.phone | default: '#' }}"  class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-gray-100 hover:bg-secondary/10 hover:text-white hover:no-underline text-center border">
                    <div class="flex flex-1 flex-col p-8">
                        <div class="flex-shrink-0 group block">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-primary mx-auto size-10 w-10 h-10 shrink-0">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
                            </svg>
                        </div>
                        <h3 class="mt-6 text-lg font-medium text-gray-900">Call Us</h3>
                        <p class="text-gray-500 text-sm">{{ site.settings.phone_name}} </p>
                    </div>
                </a>
                <a href="{{ site.settings.chat_url | default: '#'}}" class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-gray-100 hover:bg-secondary/10 hover:text-white hover:no-underline text-center border">
                    <div class="flex flex-1 flex-col p-8">
                        <div class="flex-shrink-0 group block">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-primary mx-auto size-10 w-10 h-10 shrink-0">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 0 1-.825-.242m9.345-8.334a2.126 2.126 0 0 0-.476-.095 48.64 48.64 0 0 0-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0 0 11.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
                            </svg>
                        </div>
                        <h3 class="mt-6 text-lg font-medium text-gray-900">Facebook</h3>
                        <p class="text-gray-500 text-sm">{{ site.settings.chat_name }}</p>
                    </div>
                </a>
                <a href="{{ site.settings.contact_url | default: '#'}}" class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-gray-100 hover:bg-secondary/10 hover:text-white hover:no-underline text-center border">
                    <div class="flex flex-1 flex-col p-8">
                        <div class="flex-shrink-0 group block">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-primary mx-auto size-10 w-10 h-10 shrink-0">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                            </svg>
                        </div>
                        <h3 class="mt-6 text-lg font-medium text-gray-900">Contact Form</h3>
                        <p class="text-gray-500 text-sm">{{ site.settings.contact_name }}</p>
                    </div>
                </a>
            </div>
        </section>
    </div>
</section>