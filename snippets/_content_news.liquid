<section class="my-4">
    <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 mt-4">
        {% assign related_pages_json = page.settings.related_pages_json | newline_to_br | split: '<br />' %}
        {% for path in related_pages_json %}
            {%  assign path2 = path | strip %}
            {%  assign item =  site.pages[path2] %}
            {% if item %}
                <!-- Card product -->
                <a href="{{ item.path }}" class="bg-white border border-gray-200 rounded-lg overflow-hidden max-w-64 flex flex-col">
                    {% if item.settings.thumb_image_url %}
                        <img src="{{ item.settings.thumb_image_url }}" alt="Card Image 4" class="w-full h-48 object-cover">
                    {% endif %}
                    <div class="p-4">
                        <h2 class="text-lg font-semibold text-gray-800">{{ item.link_text }}</h2>
                        <p class="text-gray-600 mt-2">{{ item.settings.description }}</p>
                    </div>
                </a>
            {% endif %}
        {% endfor %}

        {% for item in pages %}
            {%  assign sub_items_count= item.children_in_list | size %}
            {% if sub_items_count > 0 %}
                <div class="my-4">
                    <h3 class="text-lg font-semibold border-b border-gray-200 mb-3">{{ item.settings.title  }}</h3>
                    {% assign sub_items = item.children_in_list | limit: 24  %}
                    {% for item2 in sub_items %}
                        <!-- Card product -->
                        <a href="{{ item2.path }}" class="bg-white border border-gray-200 rounded-lg hover:no-underline hover:border-primary overflow-hidden max-w-64 flex flex-col">
                            {% if item2.settings.thumb_image_url %}
                                <img src="{{ item2.settings.thumb_image_url }}" alt="Card Image 4" class="w-full h-48 object-cover">
                            {% endif %}
                            <div class="p-4">
                                <h2 class="text-lg font-semibold text-gray-800">{{ item2.link_text }}</h2>
                                <p class="text-gray-600 mt-2">{{ item2.settings.description }}</p>
                            </div>
                        </a>
                    {% endfor %}
                    {% if sub_items_count > 24 %}
                        <div class="text-center mt-4">
                            <a href="{{ item.url }}" class="btn btn-primary">Learn more</a>
                        </div>
                    {% endif %}
                </div>
            {% else %}
                <!-- Card product -->
                <a href="{{ item.path }}" class="bg-white border border-gray-200 rounded-lg hover:no-underline hover:border-primary overflow-hidden max-w-64 flex flex-col">
                    {% if item.settings.thumb_image_url %}
                        <img src="{{ item.settings.thumb_image_url }}" alt="Card Image 4" class="w-full h-48 object-cover">
                    {% endif %}
                    <div class="p-4">
                        <h2 class="text-lg font-semibold text-gray-800">{{ item.link_text }}</h2>
                        <p class="text-gray-600 mt-2">{{ item.settings.description }}</p>
                    </div>
                </a>
            {% endif %}
        {% endfor %}
    </div>
</section>
