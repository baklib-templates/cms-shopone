{% assign default_hero_image = 'images/hero.jpg' | asset_url %}
{% assign screen_width = 'max-w-screen-2xl' %}

<!-- Hero Section -->
<section id="hero" class="flex items-center justify-center flex-col bg-no-repeat bg-cover bg-center bg-accent dark:bg-primary/120 h-[250px]  {% if screen_width == 'max-w-screen-2xl' %}  md:h-[400px] {% else %}  md:h-[300px] {%- endif -%}"
  style="background-image: url({{ page.settings.hero_image_url | default: default_hero_image }}); color: {{ page.settings.text_color | default: '#ffffff' }};">
  <div class="flex items-center justify-center flex-1 w-full py-3">
    <div class="container flex flex-col h-full px-4 mx-auto">
      <div class="flex flex-col items-center justify-center flex-grow">
        <h1 class="py-2 mt-12 text-2xl md:text-4xl font-bold transition duration-500 md:mt-0 text-shadow">
          {{ site.name }}
        </h1>
        <p class="py-2 text-base transition duration-500 text-shadow">{{ page.settings.description }}</p>

        <div class="z-0 flex flex-col items-center justify-center w-full md:w-1/2">
          {% form_tag 'search', class: 'w-full' %}
            <div class="relative rounded-2xl shadow-sm">
              <button type="submit" class="absolute inset-y-0 right-0 flex items-center pl-4 pr-3 sm:right-auto">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 w-5 h-5 text-primary">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z" />
                </svg>
              </button>
              <input
                type="text"
                name="{{form.keywords_field_name}}" value="{{ search.keywords | escape_once }}"
                placeholder="{{ "placeholders.search" | t }}"
                autocomplete="off"
                class="block w-full h-10 md:h-12 lg:h-14 pl-3 pr-10 transition duration-300 ease-in-out bg-white bg-opacity-75 dark:text-primary border border-transparent rounded outline-none focus:ring-0 focus:border-primary sm:pl-12 sm:text-lg focus:bg-opacity-90"
              >
            </div>
          {% endform_tag %}

          <!-- 热门标签 -->
          {% if page.settings.tags.size > 0 %}
            <div class="md:flex flex-wrap items-center justify-center hidden w-full mt-4">
              <div class="inline-block">
                {% for tag in page.settings.tags %}
                  <a
                    href="{{ tag.path }}"
                    data-turbo-frame="_top"
                    class="mr-3 hover:underline focus:ring hover:-translate-y-[2px] min-w-12"
                  >
                    {{ tag.name }}
                  </a>
                {% endfor %}
              </div>
            </div>
          {% endif %}

        </div>
      </div>
    </div>
  </div>
</section>
