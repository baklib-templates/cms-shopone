{% assign pages = page.children_in_list %}
{% for item in pages %}
    {% if item.template_name == 'news' %}
        {% assign type =  'channel' %}
        {% break %}
    {% endif %}
{% endfor %}

{% # 面包屑导航 %}
<section class="py-2 bg-secondary-100">
    <div class="max-w-6xl mx-auto px-4">
        <div class="mb-4">
            {% render 'breadcrumb', breadcrumb: page.breadcrumb  %}
        </div>
    </div>
    <div class="mx-auto max-w-2xl md:flex flex-col items-center justify-center py-4">
        <h2 class="font-semibold tracking-tight text-gray-900 md:text-3xl text-2xl flex items-center">
            {{ page.settings.title }}</h2>
        <p class="mt-2 ml-2 text-sm text-gray-500">{{ page.settings.description }}</p>
    </div>
</section>

<!-- 产品列表 -->
<section class="bg-white py-6 sm:py-12">
    <div class="mx-auto max-w-6xl px-4">
        <!-- Cards Container -->
        {% if type == 'channel' %}
            <section>
                {% for item in pages %}
                    {% if item.template_name == 'news' %}
                        {% render 'content_news', page: item %}
                    {% else %}
                        {% render 'content_post', page: item %}
                    {% endif %}
                {% endfor %}
            </section>
        {% else %}
            {% paginate_tag pages, per: 12 %}
                <div class="grid grid-cols-1 gap-4 md:gap-8 sm:grid-cols-3 mt-4">
                    {% for item2 in pages %}
                        {% render 'content_card', item: item2 %}
                    {% endfor %}
                </div>
                <!-- Pagination -->
                <div class="w-full text-right block mt-12">
                    {% render 'paginate', paginate: paginate %}
                </div>
            {% endpaginate_tag %}
            {%# 分页 %}
        {% endif %}
    </div>
</section>

{% schema %}
  {
    "name": "栏目-文章列表",
    "description": "新闻/博客/资讯列表",
    "thumb_url": "images/theme/news.webp",
    "sub_page_templates": ["post","news"],
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "标题"
      },
      {
        "id": "description",
        "type": "textarea",
        "label": "摘要"
      }
    ]
  }
{% endschema%}
