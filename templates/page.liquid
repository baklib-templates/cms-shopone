  {
    "name": "详情页-文章详情页",
    "description": "文章类页面模板",
    "thumb_url": "images/theme/page.webp",
    "sub_page_templates": [],
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "标题"
      },
      {
        "id": "description",
        "type": "textarea",
        "label": "摘要"
      },
      {
        "id": "content",
        "type": "richtext",
        "label": "内容"
      },
      {
        "id": "thumb_image_url",
        "type": "image_picker",
        "ratio": "16:9",
        "width": 300,
        "label": "封面图"
      }
    ]
  }
{% endschema%}
