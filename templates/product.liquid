{% schema %}
  {
    "name": "详情页-产品/项目页面",
    "description": "产品/项目/案例详情页面模板",
    "thumb_url": "images/theme/product.webp",
    "sub_page_templates": ["faqs","videos","news"],
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "标题"
      },
      {
        "id": "description",
        "type": "textarea",
        "label": "摘要"
      },
      {
        "id": "content",
        "type": "richtext",
        "label": "内容"
      },
      {
        "id": "thumb_image_url",
        "type": "image_picker",
        "ratio": "4:3",
        "width": 300,
        "label": "封面图"
      },
      {
        "id": "hero_image_url",
        "type": "image_picker",
        "ratio": "6:2",
        "width": 400,
        "label": "详情页封面图"
      },
      {
        "id": "tags",
        "type": "tag_picker",
        "multiple": true,
        "label": "标签"
      },
      {
          "id": "external_url",
          "type": "text",
          "placeholder": "https://",
          "default": "#",
          "label": "外部链接(Learn More)",
          "info": "如果添加了外链，点击会跳转到该链接，以下的内容就可以补充"
      }
    ]
  }
{% endschema%}
