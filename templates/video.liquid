{% schema %}
  {
    "name": "视频页-视频详情页面",
    "description": "视频详情页面模板",
    "thumb_url": "images/theme/video.webp",
    "sub_page_templates": [],
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "标题"
      },
      {
        "id": "youtube_id",
        "type": "text",
        "placeholder": "6c3RXM7lK20",
        "label": "Youtube视频链接ID",
        "info": "Youtube->分享->嵌入->复制embed链接ID: 6c3RXM7lK20。如： https://www.youtube.com/embed/6c3RXM7lK20"
      },
      {
        "id": "description",
        "type": "textarea",
        "label": "摘要"
      },
      {
        "id": "content",
        "type": "richtext",
        "label": "内容"
      },
      {
        "id": "tags",
        "type": "tag_picker",
        "multiple": true,
        "label": "标签"
      }
    ]
  }
{% endschema%}
