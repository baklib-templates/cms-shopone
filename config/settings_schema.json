  {
    "name": "主题默认值设置",
    "settings": [
      {
        "id": "logo_url",
        "type": "image_picker",
        "ratio": "6:2",
        "width": 200,
        "label": "站点Logo",
        "info": "放在站点顶部导航栏位置"
      },
      {
        "id": "email",
        "type": "text",
        "label": "Email",
        "default": "some@example.com"
      },
      {
        "id": "phone",
        "type": "text",
        "label": "Phone",
        "default": "1234567890"
      },
      {
        "id": "contact_us_url",
        "type": "text",
        "label": "Contact Us 链接",
        "default": "/contact"
      },
      {
        "id": "chat_url",
        "type": "text",
        "label": "Chat 链接",
        "default": "#"
      },
      {
        "id": "company_info",
        "type": "text",
        "label": "公司信息",
        "default": "&copy; 2025 Google Inc. All Rights Reserved."
      }
    ]
  },
  {
    "name": "导航菜单设计",
    "settings": [
      {
        "id": "product_categories",
        "type": "text",
        "label": "产品大分类设置",
        "info": "格式：电子产品|医疗器械|工业设备|厨房电器；同时在[标签管理]中添加对应的标签。",
        "default": "电子产品|医疗器械|工业设备|厨房电器"
      },
      {
        "id": "product_sub_categories",
        "type": "textarea",
        "label": "产品子分类设置",
        "rows": 10,
        "info": "格式：大类名称:小类名称1|小类名称2|小类名称3，每行一个分类。",
        "default": "电子产品:手机|电脑|平板电脑\n家用电器:电视机|冰箱|洗衣机"
      },
      {
        "id": "header_menu",
        "type": "textarea",
        "label": "页头导航菜单设置",
        "rows": 10,
        "info": "格式：menu_name[slug]{sub_menu[slug|sub_menu[slug，每行一个分栏。",
        "default": "首页[/\n新闻中心[/news\n视频中心[/videos\n产品中心[/products{产品分类1[/products/pro1|产品分类2[/products/pro2\n关于我们[https://www.baidu.com/"
      },
      {
        "id": "footer_menu",
        "type": "textarea",
        "label": "页脚菜单设置",
        "rows": 10,
        "info": "格式：menu_name[slug]{sub_menu[slug|sub_menu[slug，每行一个分栏。",
        "default": "产品中心:/products[产品分类1:/products/pro1|产品分类2:/products/pro2\n新闻中心:/news[新闻分类1:/news/news1|新闻分类2:/news/news2"
      },
      {
        "id": "friend_links",
        "type": "textarea",
        "label": "页脚友情链接/社交媒体",
        "rows": 10,
        "info": "格式：链接名称[链接地址，每行一个链接。",
        "default": "百度[https://www.baidu.com\n[谷歌[https://www.google.com"
      },
      {
        "id": "head_html",
        "type": "html",
        "label": "<head>标签内 HTML 代码",
        "rows": 10
      }
    ]
  }
